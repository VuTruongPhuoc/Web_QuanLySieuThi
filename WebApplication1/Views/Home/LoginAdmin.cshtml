
@{
    ViewBag.Title = "LoginAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-account pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="title text-capitalize mb-30 pb-25"> Log in to your admin</h3>
                <form class="log-in-form">
                    <div class="form-group row pb-3 text-center">
                        <div class="col-md-6 offset-md-3">
                            <div class="login-form-links">
                                <label name="thongbao" id="thongbao" style="color:red" class="for-get" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-md-3 col-form-label">Username</label>
                        <div class="col-md-6">
                            <input type="email" name="username" class="form-control" id="username">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword" class="col-md-3 col-form-label">Password</label>
                        <div class="col-md-6">
                            <div class="input-group mb-2 mr-sm-2">
                                <input type="password" name="password" class="form-control" id="password">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="fa fa-eye-slash" id="togglePassword"></span>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="form-group row pb-3 text-center">
                        <div class="col-md-6 offset-md-3">
                            <div class="login-form-links">
                                <div class="sign-btn">
                                    <button type="button" class="btn theme-btn--dark1 btn--md" name="dangnhap" id="dangnhap">Sign in</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).on('click', "button[name='dangnhap']", function () {

            var _username = $("#username").val();
            var _password = $("#password").val();

                $.ajax({
                    url: '/Home/XLLoginAdmin',
                    type: 'post',
                    data: {
                        username: _username,
                        password: _password,
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            window.location = data.url;
                            console.log(data.msg);
                            console.log(data._username);

                        } else {
                            console.log(data.msg);
                            $("#thongbao").empty();
                            $("#thongbao").append(data.msg);

                        }
                    }
                })
        });

    </script>
}

